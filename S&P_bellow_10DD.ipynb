data
# %%
for i in range(len(data) - 1):
    if data['<10'].iloc[i-1] != data['<10'].iloc[i+1]:
        data['Shade'].iloc[i] = 'Turn'
    else:
        data['Shade'].iloc[i] = 'Same'

for i in range(len(data) - 1):
    if data['<10'].iloc[i] == 0:
